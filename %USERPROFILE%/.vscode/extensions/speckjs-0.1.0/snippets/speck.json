{
  "Speck Component": {
    "prefix": "speck",
    "body": [
      "<${1:ComponentName}>",
      "  ${2:<!-- Component content -->}",
      "</${1:ComponentName}>;"
    ],
    "description": "Create a new Speck component"
  },
  "State Declaration": {
    "prefix": "state",
    "body": ["<state ${1:name}={${2:initialValue}} />"],
    "description": "Add reactive state"
  },
  "Script Block": {
    "prefix": "script",
    "body": [
      "<script>",
      "  ${1:// Component logic}",
      "</script>"
    ],
    "description": "Add a script block"
  },
  "If Block": {
    "prefix": "if",
    "body": [
      "<if condition={${1:condition}}>",
      "  ${2:<!-- Content -->}",
      "</if>"
    ],
    "description": "Conditional rendering"
  },
  "Loop Block": {
    "prefix": "loop",
    "body": [
      "<loop of={${1:items}} let={${2:item}}>",
      "  ${3:<!-- Loop content -->}",
      "</loop>"
    ],
    "description": "Loop over items"
  },
  "Async Block": {
    "prefix": "async",
    "body": [
      "<async promise={${1:fetchData()}}>",
      "  <then let={${2:data}}>",
      "    ${3:<!-- Success content -->}",
      "  </then>",
      "  <catch let={${4:error}}>",
      "    ${5:<!-- Error content -->}",
      "  </catch>",
      "  <loading>",
      "    ${6:<!-- Loading content -->}",
      "  </loading>",
      "</async>"
    ],
    "description": "Async data fetching"
  },
  "Router": {
    "prefix": "router",
    "body": [
      "<Router>",
      "  <route path=\"${1:/}\">",
      "    ${2:<!-- Route content -->}",
      "  </route>",
      "</Router>"
    ],
    "description": "Add routing"
  },
  "Route with Params": {
    "prefix": "route-params",
    "body": [
      "<route path=\"${1:/user/:id}\" let={${2:params}}>",
      "  ${3:<!-- Access params.id -->}",
      "</route>"
    ],
    "description": "Route with parameters"
  },
  "Props": {
    "prefix": "props",
    "body": ["<props>${1:propName}</props>"],
    "description": "Define component props"
  },
  "Slot": {
    "prefix": "slot",
    "body": ["<slot ${1:name=\"${2:slotName}\"} />"],
    "description": "Define a slot"
  },
  "onMount": {
    "prefix": "onmount",
    "body": [
      "<onMount>",
      "  {${1:console.log('Component mounted')}}",
      "</onMount>"
    ],
    "description": "Lifecycle hook - on mount"
  },
  "Full Component Template": {
    "prefix": "speck-full",
    "body": [
      "<${1:ComponentName}>",
      "  <props>${2:propName}</props>",
      "  ",
      "  <state ${3:count}={${4:0}} />",
      "  ",
      "  <script>",
      "    ${5:// Component logic}",
      "  </script>",
      "  ",
      "  <div>",
      "    ${6:<!-- Component UI -->}",
      "  </div>",
      "</${1:ComponentName}>;"
    ],
    "description": "Full Speck component template"
  },
  "Agent Component": {
    "prefix": "agent",
    "body": [
      "<Agent",
      "  purpose=\"${1:You are a helpful assistant}\"",
      "  model=\"${2:claude-3-5-sonnet-20241022}\"",
      "  provider=\"${3:anthropic}\"",
      ">",
      "  {({ send, response, loading, error }) => (",
      "    <div>",
      "      ${4:<!-- Agent UI -->}",
      "    </div>",
      "  )}",
      "</Agent>"
    ],
    "description": "AI Agent component"
  }
}
